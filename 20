- name: hsotvars & groupvars
  hosts: target2
  tasks:
  - name: installing package
    ansible.builtin.dnf:
      name: "{{a}}"
      state: present
  - name: enabling & starting service
    ansible.builtin.service:
      name: "{{b}}"
      enabled: yes
      state: started
  - name: copy files
    ansible.builtin.copy:
      src: index.html
      dest: "{{c}}"
