---
# tasks file for nginxrole
- name: installing
  dnf:
    name: "{{package}}"
    state: present
- name: enabling & starting
  service:
    name: "{{service}}"
    enabled: yes
    state: started
- name: copy file
  copy:
    src: file1
    dest: /home/binzy
- name: template setting
  template:
    src: index.html.j2
    dest: "{{location}}/index.html"
  notify: restarted
- name: restarting
  service:
    name: "{{service}}"
    state: restarted


